# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.{html,css,js}]
indent_style = space
indent_size = 2

[**.php]
indent_style = space
indent_size = 4

[composer.json]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[phpstan.{neon,neon.dist,dist.neon}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Dockerfile]
indent_style = tab
indent_size = 4

[*.{xml,xml.dist}]
max_line_length = off
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
